@{
    ViewData["Title"] = "Editar Pets";
}

<div class="text-center">

    <h1 class="display-4">Editar Pets</h1>
</div>
<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Insira o Nome">
    </div>
    <div class="form-group">
        <label for="raca">Raça</label>
        <input type="text" class="form-control" placeholder="Insira a Raça">
    </div>
    <div class="form-group">
        <label for="genero">Gênero</label>
        <input type="text" class="form-control" placeholder="Insira o Gênero">
    </div>
    <br />
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a role="button" class="btn btn-secondary" asp-controller="Pet" asp-action="Index">Voltar</a>
    </div>

</form>